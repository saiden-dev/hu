{
  "env": {
    "HU_CLEANUP_DAYS": "7",
    "HU_MAX_FILE_LINES": "500",
    "HU_MAX_GREP_RESULTS": "20"
  },
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/hu/pre-read.sh",
            "timeout": 5000,
            "type": "command"
          }
        ],
        "matcher": "Read"
      },
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/hu/pre-grep.sh",
            "timeout": 5000,
            "type": "command"
          }
        ],
        "matcher": "Grep"
      },
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/hu/pre-webfetch.sh",
            "timeout": 5000,
            "type": "command"
          }
        ],
        "matcher": "WebFetch"
      },
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/hu/pre-websearch.sh",
            "timeout": 5000,
            "type": "command"
          }
        ],
        "matcher": "WebSearch"
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/hu/session-end.sh",
            "timeout": 10000,
            "type": "command"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "command": "~/.claude/hooks/hu/session-start.sh",
            "timeout": 30000,
            "type": "command"
          }
        ]
      }
    ]
  }
}